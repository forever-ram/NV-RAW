<%= content_for :title, 'Business Template' %>

<%= content_for :head_css do %>
  <%= stylesheet_link_tag 'sign-in.css' %>
  <%= stylesheet_link_tag 'lib/animate.css' %>
<% end %>

<%= content_for :body_class, '' %>
<%= content_for :header_class, 'navbar navbar-inverse navbar-static-top' %>

<!-- Sign In Option 1 -->
<div id="sign_in1">
  <div class="container">
    <div class="row">
      <div class="span12 header">
        <h4>Log in to your account</h4>
        <p>
          There are many variations of passages of Lorem alteration in some form  injected humour these randomised words .</p>

        <div class="span4 social">
          <a href="#" class="circle facebook">
            <img src="/assets/face.png" alt="">
          </a>
           <a href="#" class="circle twitter">
            <img src="/assets/twt.png" alt="">
          </a>
           <a href="#" class="circle gplus">
            <img src="/assets/gplus.png" alt="">
          </a>
        </div>
      </div>

      <div class="span3 division">
        <div class="line l"></div>
        <span>or</span>
        <div class="line r"></div>
      </div>

      <div class="span12 footer">
        <%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
          <%= f.email_field :email, :autofocus => true, placeholder: 'Email' %>
          <%= f.password_field :password, placeholder: 'Password' %>
          <%= f.submit "Sign in" %>
      </div>

      <div class="span12 proof">
        <div class="span5 remember">
          <% if devise_mapping.rememberable? -%>
            <%= f.label :remember_me, class: "checkbox" do %>
              <%= f.check_box :remember_me %> Remember me
            <% end %>
          <% end -%>
        <% end %>
          <%= link_to 'Forgot password?', new_password_path(resource_name) %>
        </div>

        <div class="span3 dosnt">
          <%= render "users/shared/links" %>
        </div>
      </div>
    </div>
  </div>
</div>

